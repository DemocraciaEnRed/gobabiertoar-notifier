extends wrapper.jade

block content

  table(width='100%', cellpadding='0', cellspacing='0')
    tr
      td.content-block
        p=t('templates.email.greeting',{USERNAME:USERNAME})
        p!=t('templates.reset-password.body',{RESET:RESET})
        p.copy-block #{RESET}
    tr
      td.content-block
        a.btn-primary(href=RESET)=t('templates.reset-password.link')
    tr
      td.content-block
        p!=t('templates.email.signature',{config:config})
    tr
      td.ps-block
        p=t('templates.reset-password.ps')
