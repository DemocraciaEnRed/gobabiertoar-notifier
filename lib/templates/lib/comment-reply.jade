extends wrapper.jade

block content

  table(width='100%', cellpadding='0', cellspacing='0')
    tr
      td.content-block
        p=t('templates.email.greeting',{USERNAME:USERNAME})
        p=t('templates.comment-reply.body')
    tr
      td.content-block
        a.btn-primary(href=URL)=t('templates.email.link', {config: config})
    tr
      td.content-block
        p!=t('templates.email.signature',{config:config})
