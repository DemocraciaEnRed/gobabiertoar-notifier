extends wrapper.jade

block content

  table(width='100%', cellpadding='0', cellspacing='0')
    tr
      td.content-block
        p=t('templates.email.greeting',{USERNAME:USERNAME})
        p!=t('templates.welcome-email.body')
        p.copy-block #{VALIDATE}
    tr
      td.content-block
        a.btn-primary(href=VALIDATE)=t('templates.email.link', {config: config})
    tr
      td.content-block
        p!=t('templates.welcome-email.disclaimer')
    tr
      td.content-block
        p!=t('templates.email.signature')
    tr
      td.content-block
        p!=t('templates.welcome-email.pcp')
    tr
      td.ps-block
        p!=t('templates.welcome-email.ps',{SIGNIN:SIGNIN,config:config})
